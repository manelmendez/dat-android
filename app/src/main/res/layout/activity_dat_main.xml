
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffa3a3a3"
    android:orientation="vertical"
    tools:context=".DatMainActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:text="@string/DAT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="20dp"
                android:gravity="center"
                />

            <Button
                android:id="@+id/bt1"
                android:onClick="clickMe"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:background="@drawable/tecnologia"
                android:layout_margin="2dp"
                android:text="Tecnologia"
                android:textColor="#000000"
                android:textSize="40dp"
                android:textStyle="bold"
                android:elevation="5dp"
                android:translationZ="5dp"/>
            <Button
                android:id="@+id/bt2"
                android:onClick="clickMe2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:background="@drawable/deportes5"
                android:layout_margin="2dp"
                android:text="Deportes"
                android:textColor="#000000"
                android:textSize="40dp"
                android:textStyle="bold"
                android:elevation="5dp"
                android:translationZ="5dp"/>
            <Button
                android:id="@+id/bt3"
                android:onClick="clickMe3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:background="@drawable/motor"
                android:layout_margin="2dp"
                android:text="Motor"
                android:textColor="#000000"
                android:textSize="40dp"
                android:textStyle="bold"
                android:elevation="5dp"
                android:translationZ="5dp"/>
            <Button
                android:id="@+id/bt4"
                android:onClick="clickMe4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:background="@drawable/videojuegos"
                android:layout_margin="2dp"
                android:text="Videojuegos"
                android:textColor="#000000"
                android:textSize="40dp"
                android:textStyle="bold"
                android:elevation="5dp"
                android:translationZ="5dp"/>
        </LinearLayout>
    <ListView
        android:id="@+id/list_view"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/primary_dark_color"
        android:choiceMode="singleChoice"
        android:textColor="#000000"
        android:textStyle="bold"
        android:divider="@color/primary_color"
        android:dividerHeight="8dp" />

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
